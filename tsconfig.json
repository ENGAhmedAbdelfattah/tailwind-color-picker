{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "vscode", "jest"],
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src", "src/test"],
  "exclude": ["node_modules", ".vscode-test"]
}
