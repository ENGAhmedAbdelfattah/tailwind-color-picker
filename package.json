{
  "name": "tailwind-color-picker",
  "displayName": "Tailwind Color Picker",
  "description": "Tailwind v4 color picker with inline preview and palette matching",
  "version": "1.1.2",
  "publisher": "AhmedAbdelfattah",
  "repository": {
    "type": "git",
    "url": "https://github.com/ENGAhmedAbdelfattah/tailwind-color-picker"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tailwind",
    "color",
    "picker",
    "tailwindcss",
    "tailwind-v4",
    "inline-preview"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "title": "Tailwind Color Picker",
      "properties": {
        "tailwindColorPicker.utilities": {
          "type": "array",
          "default": [
            "bg",
            "text",
            "decoration",
            "border",
            "outline",
            "shadow",
            "inset-shadow",
            "ring",
            "inset-ring",
            "accent",
            "caret",
            "fill",
            "stroke"
          ],
          "description": "Tailwind utility classes to detect for inline preview and color picking."
        },
        "tailwindColorPicker.cssFilePath": {
          "type": "string",
          "default": "",
          "description": "Path to the CSS file containing Tailwind v4 theme definitions (relative to workspace root)."
        }
      }
    },
    "commands": [
      {
        "command": "tailwindColorPicker.pick",
        "title": "Pick Tailwind Color",
        "category": "Tailwind Color Picker"
      }
    ]
  },
  "scripts": {
    "test": "jest",
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "@types/tailwindcss": "^3.0.11",
    "@types/vscode": "^1.90.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  }
}